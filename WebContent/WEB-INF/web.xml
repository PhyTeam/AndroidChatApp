<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>MongoDBTest</display-name>
    
  <!-- Welcome page definition -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/LoginError.html</location>
  </error-page>
  
  <!-- Const declare definition -->
  <context-param>
    <param-name>MONGODB_HOST</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_PORT</param-name>
    <param-value>27017</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_NAME</param-name>
    <param-value>test</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_PW</param-name>
    <param-value>pw_123</param-value>
  </context-param>
</web-app>